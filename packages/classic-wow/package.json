{
  "name": "@blizzard-api/classic-wow",
  "version": "1.1.7",
  "license": "MIT",
  "author": "Putro",
  "description": "A series of helpers to interact with the World of Warcraft Classic Blizzard API",
  "repository": "https://github.com/Pewtro/blizzard-api/tree/main/packages/classic-wow",
  "type": "module",
  "engines": {
    "node": "^18.18 || ^20.9 || ^21.1 || ^22"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "@blizzard-api/classic-wow-local": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "@blizzard-api/classic-wow-local": "./src/index.ts",
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "blizzard",
    "battlenet",
    "battle.net",
    "bnet",
    "api",
    "world of warcraft",
    "warcraft",
    "wow",
    "classic"
  ],
  "dependencies": {},
  "peerDependencies": {
    "@blizzard-api/core": "1.2.1"
  },
  "devDependencies": {
    "@blizzard-api/core": "workspace:*"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "vitest watch"
  }
}
