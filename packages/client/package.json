{
  "name": "@blizzard-api/client",
  "version": "1.0.2",
  "license": "MIT",
  "author": "Putro",
  "description": "A node.js axios client to integrate with the blizzard battle.net api.",
  "repository": "https://github.com/Pewtro/blizzard/tree/main/packages/client",
  "type": "module",
  "engines": {
    "node": "^18.18 || ^20.9 || ^21.1 || ^22"
  },
  "main": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "blizzard",
    "battlenet",
    "battle.net",
    "bnet",
    "api",
    "world of warcraft",
    "warcraft",
    "wow",
    "classic",
    "retail",
    "starcraft",
    "sc2",
    "diablo",
    "d3",
    "hs",
    "hearthstone"
  ],
  "dependencies": {
    "axios": "1.7.2"
  },
  "peerDependencies": {
    "@blizzard-api/core": "1.1.0"
  },
  "devDependencies": {
    "@blizzard-api/classic-wow": "workspace:*",
    "@blizzard-api/core": "workspace:*",
    "@blizzard-api/d3": "workspace:*",
    "@blizzard-api/wow": "workspace:*"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "vitest watch"
  }
}
