{
  "name": "@blizzard-api/root",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Putro",
  "description": "A series of helpers to interact with the Blizzard Battle.net API",
  "repository": "https://github.com/Pewtro/blizzard",
  "type": "module",
  "engines": {
    "node": "^18.18 || ^20.9 || ^21.1 || ^22"
  },
  "packageManager": "pnpm@9.4.0",
  "keywords": [
    "blizzard",
    "battlenet",
    "battle.net",
    "bnet",
    "api",
    "world of warcraft",
    "warcraft",
    "wow",
    "classic",
    "retail",
    "starcraft",
    "sc2",
    "diablo",
    "d3",
    "hs",
    "hearthstone"
  ],
  "devDependencies": {
    "@changesets/cli": "2.27.7",
    "@putstack/eslint-config-typescript": "3.0.0-next.6",
    "@putstack/prettier-config": "1.4.1",
    "@types/node": "20.14.11",
    "@vitest/coverage-v8": "2.0.4",
    "@vitest/ui": "2.0.4",
    "eslint": "9.7.0",
    "husky": "9.1.1",
    "lint-staged": "15.2.7",
    "npm-run-all2": "6.2.2",
    "prettier": "3.3.3",
    "tsup": "8.2.2",
    "turbo": "2.0.9",
    "typescript": "5.5.3",
    "vitest": "2.0.4",
    "zod": "3.23.8"
  },
  "scripts": {
    "build": "turbo build",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:ci": "npm-run-all -p -l lint typecheck stylecheck",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "release": "changeset publish",
    "stylecheck": "prettier --check .",
    "test": "vitest run",
    "test:coverage": "pnpm run test --coverage",
    "test:ui": "vitest --ui --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs,md,mdx,yaml,yml,json}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "pnpm --silent lint:fix"
    ]
  }
}
